Make the configuration file MALMan.cfg in the directory MALMan. Edit and save to following content to this file.

## database
SQLALCHEMY_DATABASE_URI = 'mysql://user;password@localhost/MALMan'

## debugging options
## turn these of on production systems!
DEBUG = True
TRAP_BAD_REQUEST_ERRORS = True
SQLALCHEMY_ECHO = True

## mail server
MAIL_SERVER = 'localhost'
MAIL_PORT = 465
MAIL_USE_TLS = False
MAIL_USE_SSL = True
MAIL_USERNAME = 'user'
MAIL_PASSWORD = 'password'

## error mails
ADMINS = ['yourname@example.com']